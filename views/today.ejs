<%- include("partials/header.ejs") %>


    <div class="box" id="heading">
        <h1>
            <%=todaysDate%>
        </h1>
    </div>
    <div class="box">

        <% for(i=0; i< newListItems.length; i++){ %>
            <div class="item itemLine">
                <label class="item">
                    <input type="checkbox" class="check">
                    <span>
                        <%= newListItems[i] %>
                    </span>
                </label>
            </div>
            <% } %>

                <form name="form" class="item" action="/today" method="POST">
                    <input type="text" name="newItem" placeholder=" New Item" autocomplete="off">
                    <button class="btn submit" type="submit" name="list" value="today" list="">+</button>
                </form>
    </div>


    <%- include("partials/footer.ejs") %>